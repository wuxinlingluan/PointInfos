<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        app:theme="@style/ToolbarThemeDouban"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:background="@color/colorAccent"
            app:theme="@style/ToolbarThemeDouban"
            />
    </android.support.design.widget.AppBarLayout>

<android.support.v7.widget.CardView
    android:layout_below="@id/appbar"
    android:layout_width="368dp"
    android:padding="20dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:layout_margin="15dp"
    android:clickable="true"
    app:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    tools:layout_editor_absoluteY="66dp"
    tools:layout_editor_absoluteX="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="491dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            android:padding="10dp"
            android:text="关于:"
            android:textColor="@color/bt_bcak" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/about_me" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="联系方式:"
            android:textColor="@color/bt_bcak"
            android:layout_above="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ:"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_github"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="github:"
            android:layout_below="@+id/textView4"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/tv_prject"
            android:layout_toStartOf="@+id/tv_prject"
            android:text="项目地址:" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="452283765"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_alignTop="@+id/textView4" />

        <TextView
            android:id="@+id/tv_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/github_addr"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="5dp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_prject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="@string/project_addr"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
