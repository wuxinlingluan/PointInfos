<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="ToolbarThemeDouban" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/qq_red</item> <!--  敲定颜色-->
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
        <item name="android:textColorPrimary">@color/btn_gray_normal</item>
    </style>

    <!-- 水平分隔线的统一样式2 -->
    <style name="horizontalDivideLineCommonStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#bbb</item>
    </style>
    <!-- 水平长按钮的格式-->
    <style name="horizontalButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bt_selector</item>
    </style>
</resources>